<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@drawable/home_gradient"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/school_logo_h"
            android:layout_height="@dimen/school_logo_w"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/school_logo_m_l"
            android:layout_marginBottom="@dimen/school_logo_m_b"
            android:src="@drawable/school_logo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/school_logo_h"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/school_logo_m_l">

            <TextView
                android:id="@+id/etSchoolKey"
                android:layout_width="160sp"
                android:layout_height="@dimen/et_height"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/icon_m_r"
                android:layout_marginBottom="@dimen/school_logo_m_b"
                android:layout_toLeftOf="@+id/ivDown"
                android:background="@drawable/rounded_select_child"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/child_p_l"
                android:text="Select Child"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivDown"
                android:layout_width="@dimen/down_icon_height_width"
                android:layout_height="@dimen/down_icon_height_width"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/icon_m_r"
                android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_route"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/rl_top_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_home"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/routes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="@string/routes"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_schedule"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/ll_route"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_home"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/schedule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="@string/schedule"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/power"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

</RelativeLayout>